@using Core.Enums
@using cnu_cinema_practice.ViewModels.Account
@layout ProfileLayout

@* No @page directive because this is rendered by ProfileController via RazorComponentResult *@

@functions {
    private static string StatusBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Paid => "status-paid",
        OrderStatus.Pending => "status-pending",
        OrderStatus.Cancelled => "status-cancelled",
        OrderStatus.Refunded => "status-refunded",
        OrderStatus.Expired => "status-expired",
        _ => "status-default"
    };

    private static string StatusText(OrderStatus status) => status switch
    {
        OrderStatus.Created => "Створено",
        OrderStatus.Pending => "Очікується",
        OrderStatus.Paid => "Оплачено",
        OrderStatus.Cancelled => "Скасовано",
        OrderStatus.Refunded => "Повернуто",
        OrderStatus.Expired => "Прострочено",
        _ => status.ToString()
    };
}

<div class="bg-ambience"></div>

<main class="profile-container">
    <!-- Header Section -->
    <header class="profile-header glass-card">
        <div class="user-info">
            <div class="avatar-circle">
                <i class="bi bi-person-fill"></i>
            </div>
            <div class="user-details">
                <h1 class="user-email">@Model.Email</h1>
                <div class="user-badges">
                    @if (Model.IsAdmin)
                    {
                        <span class="badge-admin">ADMINISTRATOR</span>
                    }
                    else
                    {
                        <span class="badge-user">PREMIUM MEMBER</span>
                    }
                </div>
            </div>
        </div>

        <div class="stats-grid">
            <div class="stat-item">
                <span class="stat-value">@Model.TotalOrdersCount</span>
                <span class="stat-label">ЗАМОВЛЕНЬ</span>
            </div>
        </div>
    </header>

    <!-- Filters Section -->
    <section class="filters-section glass-card">
        <h2 class="section-title"><i class="bi bi-funnel"></i> Фільтрація замовлень</h2>
        <form action="/Profile" method="get" class="filters-form">
            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Від дати</label>
                    <input type="date" name="from" class="form-input"
                        value="@(Model.FilterFrom.HasValue ? Model.FilterFrom.Value.ToString("yyyy-MM-dd") : "")" />
                </div>
                <div class="form-group">
                    <label class="form-label">До дати</label>
                    <input type="date" name="to" class="form-input"
                        value="@(Model.FilterTo.HasValue ? Model.FilterTo.Value.ToString("yyyy-MM-dd") : "")" />
                </div>
                <div class="form-group">
                    <label class="form-label">Статус</label>
                    <select name="status" class="form-input">
                        <option value="">Усі статуси</option>
                        @foreach (var s in Enum.GetValues<OrderStatus>())
                        {
                            <option value="@s" selected="@(Model.FilterStatus == s)">@StatusText(s)</option>
                        }
                    </select>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn-primary">ЗАСТОСУВАТИ</button>
                    <a href="/Profile" class="btn-outline">Скинути</a>
                </div>
            </div>
        </form>
    </section>

    <!-- Orders List Section -->
    <section class="orders-section">
        <h2 class="section-title"><i class="bi bi-clock-history"></i> Історія замовлень</h2>

        @if (!Model.Orders.Any())
        {
            <div class="empty-state glass-card">
                <i class="bi bi-inbox empty-icon"></i>
                <h3>Замовлень не знайдено</h3>
                <p>Здається, у вас ще немає замовлень за обраний період.</p>
                <a href="/" class="btn-primary" style="display:inline-block; margin-top: 20px;">ПЕРЕГЛЯНУТИ ФІЛЬМИ</a>
            </div>
        }
        else
        {
            <div class="orders-grid">
                @foreach (var order in Model.Orders)
                {
                    <a href="/Order/Details/@order.Id" class="order-link">
                        <div class="order-card glass-card">
                            <div class="order-poster">
                                @if (!string.IsNullOrEmpty(order.MoviePosterUrl))
                                {
                                    <img src="@order.MoviePosterUrl" alt="@order.MovieName" />
                                }
                                else
                                {
                                    <div class="poster-placeholder">
                                        <i class="bi bi-film"></i>
                                    </div>
                                }
                            </div>

                            <div class="order-info">
                                <div class="order-header">
                                    <h3 class="movie-title">@order.MovieName</h3>
                                    <span class="order-badge @StatusBadgeClass(order.Status)">@StatusText(order.Status)</span>
                                </div>

                                <div class="order-details-grid">
                                    <div class="detail-item">
                                        <i class="bi bi-calendar3"></i>
                                        <span>@order.SessionStartTime.ToString("dd MMM yyyy, HH:mm")</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-door-open"></i>
                                        <span>@order.HallName</span>
                                    </div>
                                    <div class="detail-item">
                                        <i class="bi bi-hash"></i>
                                        <span>ID: @order.Id</span>
                                    </div>
                                </div>

                                <div class="tickets-row">
                                    <div class="ticket-count">
                                        <i class="bi bi-ticket-perforated"></i>
                                        <strong>@order.Tickets.Count Квитки</strong>
                                    </div>
                                    <div class="ticket-badges">
                                        @foreach (var ticket in order.Tickets)
                                        {
                                            <span class="ticket-badge">
                                                @((char)('A' + ticket.RowNum))@(ticket.SeatNum + 1)
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="order-footer">
                                    <div class="order-creation">
                                        @if (order is { IsPaid: true, PaidAt: not null })
                                        {
                                            <span class="paid-date">Оплачено: @order.PaidAt.Value.ToString("dd.MM.yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="created-date">Створено: @order.CreatedAt.ToString("dd.MM.yyyy")</span>
                                        }
                                    </div>
                                    <div class="order-total">
                                        @order.TotalAmount.ToString("N0") ₴
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
    </section>
</main>

<style>
    .profile-container {
        max-width: 1400px;
        margin: 100px auto 40px;
        padding: 0 20px 60px;
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .section-title {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 25px;
        color: #fff;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .section-title i {
        color: var(--cyan-400);
    }

    /* Glass Card Base */
    .glass-card {
        background: rgba(15, 23, 42, 0.4);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 24px;
        padding: 30px;
    }

    /* Profile Header */
    .profile-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 30px;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 25px;
    }

    .avatar-circle {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--cyan-500), #8b5cf6);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        color: #fff;
        box-shadow: 0 10px 20px rgba(6, 182, 212, 0.2);
    }

    .user-email {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 24px;
        font-weight: 700;
        margin-bottom: 8px;
        color: #fff;
    }

    .badge-admin {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #f87171;
        font-size: 11px;
        padding: 4px 12px;
        border-radius: 100px;
        font-weight: 800;
        letter-spacing: 0.1em;
    }

    .badge-user {
        background: rgba(34, 211, 238, 0.1);
        border: 1px solid rgba(34, 211, 238, 0.3);
        color: var(--cyan-400);
        font-size: 11px;
        padding: 4px 12px;
        border-radius: 100px;
        font-weight: 800;
        letter-spacing: 0.1em;
    }

    .stat-item {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .stat-value {
        font-size: 32px;
        font-weight: 800;
        color: var(--cyan-400);
        font-family: 'Space Grotesk', sans-serif;
    }

    .stat-label {
        font-size: 11px;
        font-weight: 700;
        color: var(--text-dark-slate);
        letter-spacing: 0.2em;
    }

    /* Filters */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        align-items: end;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .form-label {
        font-size: 11px;
        font-weight: 800;
        color: var(--text-dark-slate);
        letter-spacing: 0.1em;
        text-transform: uppercase;
    }

    .form-input {
        background: rgba(255, 255, 255, 0.03);
        border: 1.5px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 12px 16px;
        color: #fff;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--cyan-400);
        background: rgba(255, 255, 255, 0.06);
    }

    .form-actions {
        display: flex;
        gap: 12px;
    }

    .btn-primary {
        background: var(--cyan-500);
        color: #020617;
        font-weight: 800;
        font-size: 13px;
        padding: 12px 24px;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    .btn-primary:hover {
        background: #fff;
        transform: translateY(-2px);
    }

    .btn-outline {
        background: transparent;
        border: 1.5px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        font-weight: 700;
        font-size: 13px;
        padding: 12px 24px;
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-outline:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: #fff;
    }

    /* Orders Grid */
    .orders-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 20px;
    }

    .order-link {
        text-decoration: none;
        color: inherit;
        display: block;
        transition: transform 0.3s ease;
    }

    .order-link:hover {
        transform: scale(1.01);
    }

    .order-card {
        display: flex;
        gap: 30px;
        padding: 25px;
    }

    .order-poster {
        flex-shrink: 0;
    }

    .order-poster img {
        width: 120px;
        height: 180px;
        object-fit: cover;
        border-radius: 16px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }

    .poster-placeholder {
        width: 120px;
        height: 180px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        color: rgba(255, 255, 255, 0.2);
    }

    .order-info {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 20px;
    }

    .movie-title {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 22px;
        font-weight: 700;
        color: #fff;
    }

    .order-badge {
        font-size: 10px;
        font-weight: 800;
        padding: 5px 12px;
        border-radius: 100px;
        letter-spacing: 0.1em;
    }

    .status-paid {
        background: rgba(34, 197, 94, 0.13);
        color: #4ade80;
        border: 1px solid rgba(34, 197, 94, 0.3);
    }

    .status-pending {
        background: rgba(234, 179, 8, 0.13);
        color: #facc15;
        border: 1px solid rgba(234, 179, 8, 0.3);
    }

    .status-cancelled {
        background: rgba(239, 68, 68, 0.13);
        color: #f87171;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .status-expired {
        background: rgba(100, 116, 139, 0.13);
        color: #94a3b8;
        border: 1px solid rgba(100, 116, 139, 0.3);
    }

    .order-details-grid {
        display: flex;
        gap: 30px;
        margin-bottom: 20px;
        color: var(--text-muted);
        font-size: 14px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .detail-item i {
        color: var(--cyan-400);
    }

    .tickets-row {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 16px;
        padding: 15px 20px;
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    .ticket-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .ticket-badge {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        padding: 2px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
    }

    .order-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 1px solid rgba(255, 255, 255, 0.08);
    }

    .order-creation {
        font-size: 13px;
        color: var(--text-dark-slate);
    }

    .order-total {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 20px;
        font-weight: 700;
        color: var(--cyan-400);
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 40px;
    }

    .empty-icon {
        font-size: 64px;
        color: rgba(255, 255, 255, 0.1);
        display: block;
        margin-bottom: 20px;
    }

    @@media (max-width: 768px) {
        .profile-header {
            flex-direction: column;
            align-items: flex-start;
        }

        .order-card {
            flex-direction: column;
        }

        .order-poster img,
        .poster-placeholder {
            width: 100%;
            height: 200px;
        }
    }
</style>

@code {
    [Parameter] public ProfileViewModel Model { get; set; } = new();
}
