@layout AccountLayout
@using cnu_cinema_practice.ViewModels.Account
@using Microsoft.AspNetCore.Components.Forms

<div class="account-page-container">
    <div class="account-card">
        <div class="account-header">
            <div class="account-logo">
                <span
                    style="font-family: 'Space Grotesk', sans-serif; font-size: 24px; font-weight: 800; color: var(--cyan-400);">
                    CNU<span style="color: #fff;">CINEMA</span>
                </span>
            </div>
            <h1 class="account-title">Встановлення нового пароля</h1>
            <p class="account-subtitle">Будь ласка, введіть свій новий пароль</p>
        </div>

        <form action="/Account/ResetPassword" method="post" class="account-form">
            <AntiforgeryToken />
            @if (Errors != null && Errors.Any())
            {
                <div class="validation-summary">
                    <ul>
                        @foreach (var error in Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <input type="hidden" name="Token" value="@Model.Token" />
            <input type="hidden" name="Email" value="@Model.Email" />

            <div class="form-group">
                <label class="account-label" for="Password">Новий пароль</label>
                <div class="account-input-wrapper">
                    <input type="password" id="Password" name="Password" class="account-input" placeholder="••••••••"
                        required />
                </div>
            </div>

            <div class="form-group">
                <label class="account-label" for="ConfirmPassword">Підтвердження пароля</label>
                <div class="account-input-wrapper">
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" class="account-input"
                        placeholder="••••••••" required />
                </div>
            </div>

            <button type="submit" class="account-btn">СКИНУТИ ПАРОЛЬ</button>
        </form>
    </div>
</div>

@code {
    [Parameter] public ResetPasswordViewModel Model { get; set; } = new();
    [Parameter] public IEnumerable<string>? Errors { get; set; }
}
