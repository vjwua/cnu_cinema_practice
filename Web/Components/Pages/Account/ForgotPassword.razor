@layout AccountLayout
@using cnu_cinema_practice.ViewModels.Account
@using Microsoft.AspNetCore.Components.Forms

<div class="account-page-container">
    <div class="account-card">
        <div class="account-header">
            <div class="account-logo">
                <span
                    style="font-family: 'Space Grotesk', sans-serif; font-size: 24px; font-weight: 800; color: var(--cyan-400);">
                    CNU<span style="color: #fff;">CINEMA</span>
                </span>
            </div>
            <h1 class="account-title">Відновлення пароля</h1>
            <p class="account-subtitle">Введіть свою електронну пошту, щоб отримати посилання для скидання пароля</p>
        </div>

        <form action="/Account/ForgotPassword" method="post" class="account-form">
            <AntiforgeryToken />
            @if (Errors != null && Errors.Any())
            {
                <div class="validation-summary">
                    <ul>
                        @foreach (var error in Errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <div class="form-group">
                <label class="account-label" for="Email">Електронна пошта</label>
                <div class="account-input-wrapper">
                    <input type="email" id="Email" name="Email" class="account-input" placeholder="name@example.com"
                        value="@Model.Email" required />
                </div>
            </div>

            <button type="submit" class="account-btn">ВІДПРАВИТИ ПОСИЛАННЯ</button>

            <div class="account-footer">
                Згадали пароль? <a href="/Account/Login" class="account-link">Повернутися до входу</a>
            </div>
        </form>
    </div>
</div>

@code {
    [Parameter] public ForgotPasswordViewModel Model { get; set; } = new();
    [Parameter] public IEnumerable<string>? Errors { get; set; }
}
