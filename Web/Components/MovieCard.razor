@using cnu_cinema_practice.Models

<div class="group relative cursor-pointer" @onclick="() => OnClick.InvokeAsync(Movie)">
    <!-- Decorative Neon Border -->
    <div
        class="absolute -inset-0.5 bg-gradient-to-br from-cyan-500/20 to-purple-500/20 rounded-[2.5rem] blur opacity-0 group-hover:opacity-100 transition duration-700">
    </div>

    <div
        class="relative aspect-[2/3] rounded-[2rem] overflow-hidden bg-slate-900 shadow-2xl transition-all duration-700 group-hover:-translate-y-4">
        <img src="@Movie.Poster" alt="@Movie.Title"
            class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110" />

        <!-- Rating Badge -->
        <div class="absolute top-6 right-6 z-20">
            <div class="glass px-3 py-1.5 rounded-xl border border-white/10 flex items-center gap-1.5">
                <span class="text-amber-400 text-xs">★</span>
                <span class="text-white font-black text-xs">@Movie.Rating</span>
            </div>
        </div>

        <!-- Content Overlay -->
        <div
            class="absolute inset-0 bg-gradient-to-t from-slate-950 via-slate-950/40 to-transparent flex flex-col justify-end p-8">
            <div class="space-y-3 transform transition-transform duration-700 group-hover:translate-y-[-10px]">
                <h3
                    class="text-2xl font-black uppercase italic tracking-tighter leading-none group-hover:text-cyan-400 transition-colors">
                    @Movie.Title
                </h3>
                <div class="flex flex-wrap gap-2 items-center opacity-60 group-hover:opacity-100 transition-opacity">
                    <span class="text-[9px] font-black uppercase tracking-widest text-slate-300">@string.Join(" / ",
                        Movie.Genre)</span>
                    <div class="w-1 h-1 rounded-full bg-slate-600"></div>
                    <span class="text-[9px] font-black uppercase tracking-widest text-slate-300">@Movie.Duration
                        хв</span>
                </div>

                <!-- Sessions on Hover -->
                <div
                    class="h-0 group-hover:h-auto overflow-hidden opacity-0 group-hover:opacity-100 transition-all duration-700 pt-4">
                    <div class="text-[8px] font-black uppercase tracking-[0.2em] text-cyan-500 mb-2">Сеанси</div>
                    <div class="flex gap-2">
                        @foreach (var s in Movie.Sessions.Take(2))
                        {
                            <div class="glass px-2 py-1 rounded-lg text-[10px] font-black">
                                @s.Time
                            </div>
                        }
                        <div class="glass px-2 py-1 rounded-lg text-[10px] font-black text-slate-500">+ більше</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Movie Movie { get; set; } = new();

    [Parameter]
    public EventCallback<Movie> OnClick { get; set; }
}
