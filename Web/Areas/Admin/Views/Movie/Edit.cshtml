@model cnu_cinema_practice.ViewModels.Movies.UpdateMovieViewModel
@{
ViewData["Title"] = Model.Id > 0 ? "Edit Movie" : "Add New Movie";
}

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Movie Title *</label>
                        <input asp-for="Name" class="form-control" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DurationMinutes" class="form-label">Duration (minutes)</label>
                            <input asp-for="DurationMinutes" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="AgeLimit" class="form-label">Age Rating *</label>
                            <select asp-for="AgeLimit" class="form-select" required>
                                <option value="">Select Rating</option>
                                <option value="0">ЗА</option>
                                <option value="12">12+</option>
                                <option value="16">16+</option>
                                <option value="18">18+</option>
                            </select>
                        </div>

                    </div>

                    <div class="mb-3">
                        <label asp-for="GenresString" class="form-label">Genres (comma-separated)</label>
                        <input asp-for="GenresString" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="PosterUrl" class="form-label">Poster URL</label>
                        <input asp-for="PosterUrl" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="TrailerUrl" class="form-label">Trailer URL</label>
                        <input asp-for="TrailerUrl" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="form-label">Country</label>
                        <input asp-for="Country" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Directors" class="form-label">Directors</label>
                        <input asp-for="Directors" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Actors" class="form-label">Actors</label>
                        <input asp-for="Actors" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImdbRating" class="form-label">IMDb Rating</label>
                        <input asp-for="ImdbRating" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                        <input asp-for="ReleaseDate" type="date" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Update Movie
                        </button>
                        <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
