@using cnu_cinema_practice.ViewModels
@model cnu_cinema_practice.ViewModels.Halls.CreateHallViewModel
@{
    ViewData["Title"] = "Add New Hall";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Hall" asp-action="Create" method="post">
                    @*<input type="hidden" asp-for="Id" />*@

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Hall Name *</label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Theater 1, VIP Hall" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Rows" class="form-label">Number of Rows *</label>
                            <input asp-for="Rows" type="number" class="form-control" min="1" max="50" required />
                            <small class="text-muted">Maximum 26 rows (A-Z)</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Columns" class="form-label">Seats Per Row *</label>
                            <input asp-for="Columns" type="number" class="form-control" min="1" max="50" required />
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Total Capacity:</strong> <span id="total-capacity">0</span> seats
                    </div>

                    @*<div class="mb-3 form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Active</label>
                    </div>*@

                    <hr>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> @("Create Hall")
                        </button>
                        <a asp-action="Halls" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateCapacity() {
            const rows = parseInt(document.getElementById('Rows').value) || 0;
            const seatsPerRow = parseInt(document.getElementById('SeatsPerRow').value) || 0;
            document.getElementById('total-capacity').textContent = rows * seatsPerRow;
        }

        document.getElementById('Rows').addEventListener('input', updateCapacity);
        document.getElementById('SeatsPerRow').addEventListener('input', updateCapacity);
        updateCapacity();
    </script>
}