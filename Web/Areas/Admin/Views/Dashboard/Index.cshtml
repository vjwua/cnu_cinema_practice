@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-4">Admin Dashboard</h1>
        <p class="text-muted">Manage your cinema's movies and halls</p>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center p-5">
                <i class="bi bi-film" style="font-size: 4rem; color: #0d6efd;"></i>
                <h3 class="mt-3">Movies Management</h3>
                <p class="text-muted">Add, edit, or remove movies from your cinema</p>
                <a asp-controller="Movie" asp-action="Index" class="btn btn-primary btn-lg">Manage Movies</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center p-5">
                <i class="bi bi-building" style="font-size: 4rem; color: #198754;"></i>
                <h3 class="mt-3">Hall Management</h3>
                <p class="text-muted">Configure cinema halls and seat arrangements</p>
                <a asp-controller="Hall" asp-action="Index" class="btn btn-success btn-lg">Manage Halls</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center p-5">
                <i class="bi bi-camera-video" style="font-size: 4rem; color: #dc3545;"></i>
                <h3 class="mt-3">Session Management</h3>
                <p class="text-muted">Organize movies by sessions and form the schedule</p>
                <a asp-controller="Session" asp-action="Index" class="btn btn-danger btn-lg">Manage Sessions</a>
            </div>
        </div>
    </div>
</div>