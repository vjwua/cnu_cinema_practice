@model cnu_cinema_practice.ViewModels.Sessions.SessionDetailsViewModel
@{
    ViewBag.Title = "Session Details";
    Layout = "_Layout";
}

@section css {
    <link rel="stylesheet" href="~/css/session-details.css" />
}

<div class="session-details-container">
    <div class="page-header">
        <h2>
            <i class="bi bi-info-circle"></i> Session Details
        </h2>
        <div class="header-actions">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Main Session Info -->
        <div class="col-lg-8">
            <div class="card session-info-card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-film"></i> @Model.MovieTitle
                    </h4>
                </div>
                <div class="card-body">
                    <div class="session-details-grid">
                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-building"></i>
                            </div>
                            <div class="detail-content">
                                <label>Hall</label>
                                <strong>@Model.HallName</strong>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-calendar-event"></i>
                            </div>
                            <div class="detail-content">
                                <label>Date</label>
                                <strong>@Model.StartTime.ToString("dddd, MMMM dd, yyyy")</strong>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-clock"></i>
                            </div>
                            <div class="detail-content">
                                <label>Start Time</label>
                                <strong>@Model.StartTime.ToString("HH:mm")</strong>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <div class="detail-content">
                                <label>End Time</label>
                                <strong>@Model.EndTime.ToString("HH:mm")</strong>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                            <div class="detail-content">
                                <label>Duration</label>
                                <strong>@Model.MovieDurationMinutes minutes</strong>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-badge-3d"></i>
                            </div>
                            <div class="detail-content">
                                <label>Format</label>
                                <strong>@Model.MovieFormat</strong>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-currency-dollar"></i>
                            </div>
                            <div class="detail-content">
                                <label>Base Price</label>
                                <strong>@Model.BasePrice.ToString("F2")₴</strong>
                            </div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-icon">
                                <i class="bi bi-people"></i>
                            </div>
                            <div class="detail-content">
                                <label>Capacity</label>
                                <strong>@Model.TotalSeats seats</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Seat Map -->
            <div class="card seat-map-card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-grid-3x3"></i> Seat Map
                    </h5>
                </div>
                <div class="card-body">
                    <div class="seat-legend mb-4">
                        <div class="legend-item">
                            <span class="seat-indicator available"></span>
                            <span>Available</span>
                        </div>
                        <div class="legend-item">
                            <span class="seat-indicator booked"></span>
                            <span>Booked</span>
                        </div>
                        <div class="legend-item">
                            <span class="seat-indicator vip"></span>
                            <span>VIP</span>
                        </div>
                    </div>

                    <div class="screen-indicator">
                        <i class="bi bi-soundwave"></i> SCREEN
                    </div>

                    <div class="seats-container">
                        @{
                            var seatsByRow = Model.Seats
                                .GroupBy(s => s.RowNum)
                                .OrderBy(g => g.Key);
                        }

                        @foreach (var row in seatsByRow)
                        {
                            <div class="seat-row">
                                <div class="row-label">@((char)('A' + row.Key - 1))</div>
                                <div class="seats">
                                    @foreach (var seat in row.OrderBy(s => s.SeatNum))
                                    {
                                        var seatClass = seat.IsAvailable ? "available" : "booked";
                                        seatClass += seat.SeatType.Contains("VIP") ? " vip" : "";

                                        <div class="seat @seatClass"
                                             data-seat-id="@seat.SeatId"
                                             data-row="@seat.RowNum"
                                             data-seat="@seat.SeatNum"
                                             title="Seat @((char)('A' + seat.RowNum))@seat.SeatNum - @seat.SeatType - @seat.TotalPrice.ToString("F2")₴">
                                            <span>@seat.SeatNum</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Occupancy Stats -->
            <div class="card stats-card">
                <div class="card-header bg-info text-white">
                    <i class="bi bi-graph-up"></i> Occupancy Statistics
                </div>
                <div class="card-body">
                    @{
                        var occupancyPercentage = Model.TotalSeats > 0
                            ? ((Model.TotalSeats - Model.AvailableSeatsCount) * 100.0 / Model.TotalSeats)
                            : 0;
                    }

                    <div class="stat-item">
                        <label>Total Seats</label>
                        <h3>@Model.TotalSeats</h3>
                    </div>

                    <div class="stat-item">
                        <label>Available</label>
                        <h3 class="text-success">@Model.AvailableSeatsCount</h3>
                    </div>

                    <div class="stat-item">
                        <label>Booked</label>
                        <h3 class="text-danger">@(Model.TotalSeats - Model.AvailableSeatsCount)</h3>
                    </div>

                    <div class="occupancy-bar-container mt-3">
                        <label class="mb-2">Occupancy Rate</label>
                        <div class="progress" style="height: 30px;">
                            <div
                                class="progress-bar @(occupancyPercentage > 80 ? "bg-danger" : occupancyPercentage > 50 ? "bg-warning" : "bg-success")"
                                role="progressbar"
                                style="width: @occupancyPercentage%"
                                aria-valuenow="@occupancyPercentage"
                                aria-valuemin="0"
                                aria-valuemax="100">
                                @occupancyPercentage.ToString("F1")%
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="revenue-estimate">
                        <label>Potential Revenue</label>
                        <h4 class="text-primary">
                            @Model.Seats.Sum(s => s.TotalPrice).ToString("F2")₴
                        </h4>
                        <small class="text-muted">If fully booked</small>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <i class="bi bi-lightning"></i> Quick Actions
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary w-100 mb-2">
                        <i class="bi bi-pencil"></i> Edit Session
                    </a>
                    <a href="@Url.Action("Create", new { startTime = Model.StartTime, hallId = Model.HallId, movieId = Model.MovieId })"
                       class="btn btn-outline-success w-100 mb-2">
                        <i class="bi bi-plus-circle"></i> Create Similar
                    </a>
                    <a href="@Url.Action("Schedule")" class="btn btn-outline-info w-100 mb-2">
                        <i class="bi bi-calendar-week"></i> View Schedule
                    </a>
                    <button type="button"
                            class="btn btn-outline-danger w-100"
                            onclick="confirmDelete(@Model.Id)">
                        <i class="bi bi-trash"></i> Delete Session
                    </button>
                </div>
            </div>

            <!-- Session Status -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <i class="bi bi-check-circle"></i> Status
                </div>
                <div class="card-body">
                    @{
                        var now = DateTime.Now;
                        var status = "";
                        var statusClass = "";

                        if (Model.EndTime < now)
                        {
                            status = "Completed";
                            statusClass = "secondary";
                        }
                        else if (Model.StartTime <= now && Model.EndTime >= now)
                        {
                            status = "In Progress";
                            statusClass = "warning";
                        }
                        else if (Model.StartTime > now)
                        {
                            status = "Upcoming";
                            statusClass = "success";
                        }
                    }

                    <div class="text-center">
                        <span class="badge bg-@statusClass" style="font-size: 1.2rem; padding: 10px 20px;">
                            @status
                        </span>

                        @if (status == "Upcoming")
                        {
                            var timeUntil = Model.StartTime - now;
                            <p class="mt-3 mb-0 text-muted">
                                Starts in @(timeUntil.Days > 0 ? $"{timeUntil.Days} days" : $"{timeUntil.Hours} hours")
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this session?</p>
                <div class="alert alert-warning">
                    <strong>@Model.MovieTitle</strong><br>
                    <small>@Model.StartTime.ToString("dddd, MMMM dd, yyyy - HH:mm")</small>
                </div>
                <p class="text-danger">
                    <i class="bi bi-exclamation-triangle"></i> This will affect all bookings for this session.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(sessionId) {
        document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + sessionId;
        const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }
</script>