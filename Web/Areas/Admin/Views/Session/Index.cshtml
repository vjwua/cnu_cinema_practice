@model cnu_cinema_practice.ViewModels.Sessions.AdminSessionIndexViewModel
@{
    ViewBag.Title = "Sessions";
    Layout = "_Layout";
}

<div class="sessions-index-container">
    <div class="page-header">
        <h2>
            <i class="bi bi-calendar3"></i> Sessions Management
        </h2>
        <div class="header-actions">
            <a href="@Url.Action("Schedule")" class="btn btn-outline-primary">
                <i class="bi bi-calendar-week"></i> Schedule View
            </a>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Session
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <form method="get" class="sessions-filters mb-4" id="filtersForm">
        <input type="hidden" name="page" value="1"/>
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <input type="text"
                       name="search"
                       value="@Model.Search"
                       class="form-control"
                       placeholder="Search by movie or hall...">
            </div>
            <div class="col-md-3">
                <select name="format" class="form-select">
                    <option value="" selected="@(string.IsNullOrWhiteSpace(Model.Format) ? "selected" : null)">All
                        Formats
                    </option>
                    <option value="2D" selected="@(Model.Format == "2D" ? "selected" : null)">2D</option>
                    <option value="3D" selected="@(Model.Format == "3D" ? "selected" : null)">3D</option>
                    <option value="IMAX" selected="@(Model.Format == "IMAX" ? "selected" : null)">IMAX</option>
                    <option value="4DX" selected="@(Model.Format == "4DX" ? "selected" : null)">4DX</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="dateFilter" class="form-select">
                    <option value="" selected="@(string.IsNullOrWhiteSpace(Model.DateFilter) ? "selected" : null)">All
                        Dates
                    </option>
                    <option value="today" selected="@(Model.DateFilter == "today" ? "selected" : null)">Today</option>
                    <option value="upcoming" selected="@(Model.DateFilter == "upcoming" ? "selected" : null)">Upcoming
                    </option>
                    <option value="past" selected="@(Model.DateFilter == "past" ? "selected" : null)">Past</option>
                </select>
            </div>
            <div class="col-md-2 d-grid gap-2">
                <a class="btn btn-outline-secondary"
                   href="@Url.Action("Index")">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            </div>
        </div>
    </form>

    <div id="sessionsResults">
        @await Html.PartialAsync("_SessionIndexResults", Model)
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this session?</p>
                <div class="alert alert-warning">
                    <strong id="deleteMovieName"></strong><br>
                    <small id="deleteDateTime"></small>
                </div>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i> This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete Session</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .sessions-index-container {
        padding: 20px;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #dee2e6;
    }

    .page-header h2 {
        margin: 0;
        color: #212529;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .sessions-filters {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }

    .sessions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .session-card {
        background: white;
        border: 1px solid #dee2e6;
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s;
        display: flex;
        flex-direction: column;
    }

    .session-card:hover {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transform: translateY(-3px);
    }

    .session-card.past-session {
        opacity: 0.7;
    }

    .session-poster {
        position: relative;
        height: 200px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .session-poster img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .session-poster.no-poster {
        color: white;
        font-size: 4rem;
    }

    .past-overlay {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .session-details {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .session-movie-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #212529;
    }

    .session-info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
        margin-bottom: 20px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        color: #495057;
    }

    .info-item i {
        color: #007bff;
        font-size: 1rem;
    }

    .session-actions {
        display: flex;
        gap: 8px;
        margin-top: auto;
        flex-wrap: wrap;
    }

    .session-actions .btn {
        flex: 1;
        min-width: 80px;
    }

    .empty-state {
        background: #f8f9fa;
        border: 2px dashed #dee2e6;
        border-radius: 10px;
    }
</style>

<script>
    function confirmDelete(sessionId, movieName, dateTime) {
        document.getElementById('deleteMovieName').textContent = movieName;
        document.getElementById('deleteDateTime').textContent = dateTime;
        document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + sessionId;

        const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
        modal.show();
    }

    (function () {
        const form = document.getElementById('filtersForm');
        const resultsEl = document.getElementById('sessionsResults');
        if (!form || !resultsEl) return;

        const pageInput = form.querySelector('input[name="page"]');
        let debounceTimer;
        let abortController = null;

        const loadResults = async (resetPage = false) => {
            if (resetPage && pageInput) pageInput.value = '1';

            abortController?.abort();
            abortController = new AbortController();

            const formData = new FormData(form);
            const params = new URLSearchParams();

            for (const [key, value] of formData.entries()) {
                if (value && value.trim() !== '') {
                    params.set(key, value);
                }
            }

            const query = params.toString();
            const url = '@Url.Action("IndexResults")' + (query ? '?' + query : '');

            window.history.replaceState(null, '',
                '@Url.Action("Index")' + (query ? '?' + query : ''));

            try {
                const response = await fetch(url, {
                    headers: {'X-Requested-With': 'XMLHttpRequest'},
                    signal: abortController.signal
                });

                if (response.ok) {
                    resultsEl.innerHTML = await response.text();
                }
            } catch (e) {
                if (e.name !== 'AbortError') {
                    console.error('Failed to load sessions:', e);
                }
            }
        };

        const searchInput = form.querySelector('input[name="search"]');
        if (searchInput) {
            searchInput.addEventListener('input', () => {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => loadResults(true), 120);
            });
        }

        form.querySelectorAll('select').forEach(select => {
            select.addEventListener('change', () => loadResults(true));
        });

        resultsEl.addEventListener('click', (e) => {
            const pageLink = e.target.closest('.page-link');
            if (!pageLink || pageLink.closest('.disabled')) return;

            e.preventDefault();
            const page = new URL(pageLink.href).searchParams.get('page') || '1';
            if (pageInput) pageInput.value = page;
            loadResults(false);
        });
    })();
</script>