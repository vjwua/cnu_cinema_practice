@{
    ViewData["Title"] = "Account Locked";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 text-center">
        <div class="card shadow">
            <div class="card-body py-5">
                <i class="bi bi-lock-fill text-warning" style="font-size: 4rem;"></i>
                <h2 class="mt-3">Account Temporarily Locked</h2>
                <p class="text-muted mt-2">
                    Too many failed login attempts. Please try again in 15 minutes.
                </p>
                <a asp-area="" asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">
                    <i class="bi bi-box-arrow-in-right"></i> Try Again
                </a>
            </div>
        </div>
    </div>
</div>