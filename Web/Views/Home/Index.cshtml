@using cnu_cinema_practice.ViewModels
@model List<MovieOverviewViewModel>
@{
    ViewData["Title"] = "Now Showing";
}

<div class="mb-4">
    <h1 class="display-4 mb-2">Now Showing</h1>
    <p class="lead text-muted">Great movies start here.</p>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
    @foreach (var movie in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm movie-card">
                <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Name poster">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@movie.Name</h5>
                    <div class="mb-2">
                        <span class="badge bg-secondary">@movie.ImdbRating</span>
                    </div>
                    <p class="card-text text-muted small mb-2">
                        <i class="bi bi-clock"></i> @movie.FormattedDuration | @movie.FormattedGenres
                    </p>
                    <div class="mt-auto">
                        <a asp-area="" asp-controller="Booking" asp-action="SelectSeats" class="btn btn-primary w-100">Book Tickets</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center" role="alert">
        <h4 class="alert-heading">No movies currently showing</h4>
        <p>Check back soon for upcoming releases!</p>
    </div>
}